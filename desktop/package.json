{
  "name": "latex-resume-editor",
  "version": "1.0.0",
  "description": "LaTeX Resume Editor - Desktop App for Windows ARM",
  "main": "main.js",
  "author": "LaTeX Resume Editor",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win-arm64": "electron-builder --win --arm64",
    "build:win-x64": "electron-builder --win --x64",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "electron-log": "^5.1.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.latexeditor.resume",
    "productName": "LaTeX Resume Editor",
    "copyright": "Copyright 2024 LaTeX Resume Editor",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../code",
        "to": "code",
        "filter": ["**/*"]
      },
      {
        "from": "../latex",
        "to": "latex",
        "filter": ["**/*"]
      },
      {
        "from": "backend-dist/",
        "to": "backend-dist",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["arm64"]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LaTeX Resume Editor",
      "runAfterFinish": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}-${arch}.${ext}"
    }
  }
}
